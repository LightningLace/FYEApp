<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_home_screen"
    tools:context="com.stringclevername.fyeapp.HomeScreen"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_Name"
        android:focusable="true"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="#bb000000"
        android:layout_marginTop="46dp"
        android:layout_weight="0.0"
        android:layout_gravity="center_horizontal" />

    <RadioGroup
        android:id="@+id/radioStudentType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    </RadioGroup>


    <RadioButton
        android:id="@+id/radioFys"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/radio_fys"
        android:checked="true"
        android:layout_marginTop="52dp"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />

    <RadioButton
        android:id="@+id/radioPl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/radio_pl"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="login"
        android:text="@string/action_sign_in"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="110dp" />


</LinearLayout>
