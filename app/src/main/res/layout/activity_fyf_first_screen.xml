<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="6dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.stringclevername.fyeapp.SwipeActivity$FYFFirstScreen">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CHECK IN"
        android:id="@+id/checkInButton"
        android:textColor="#ffffff"
        android:background="#e27226"
        android:textSize="25sp"
        android:layout_above="@+id/forumButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="FORUM INFORMATION"
        android:id="@+id/forumButton"
        android:textColor="#ffffff"
        android:background="#d54a03"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="68dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:background="@drawable/title"
        android:contentDescription="Forum Schedule: Click on a Group Number"/>


    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/group1"
        android:background="@drawable/group1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="Group 1"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/group2"
        android:background="@drawable/group2"
        android:layout_alignBottom="@+id/group1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="Group 2"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/group3"
        android:background="@drawable/group3"
        android:layout_alignBottom="@+id/group4"
        android:layout_alignLeft="@+id/group2"
        android:layout_alignStart="@+id/group2"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:contentDescription="Group 3"/>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/group4"
        android:background="@drawable/group4"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/group1"
        android:layout_alignEnd="@+id/group1"
        android:contentDescription="Group 4"/>

</RelativeLayout>